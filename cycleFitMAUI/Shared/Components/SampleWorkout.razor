@using cycleFitMAUI.Data
<div class="flex justify-between p-4 border h-32">
    <div class="w-2/3 pr-4 flex justify-start items-center">
        <div>
            <h2 class="text-xl font-bold">@Title</h2>
            <p class="mt-2">@Description</p>
        </div>
    </div>
    <div class="w-1/3 flex justify-end items-center">
        <button @onclick="InvokeSaveWorkout" class="hover:bg-blue-700 bg-blue-500 text-white px-4 py-2 rounded-full">Save Workout</button>
    </div>
</div>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public Action SaveWorkout { get; set; }

    // Pass in the title, description, and callback function to be used for creating the file and saving to disk

    private void InvokeSaveWorkout()
    {
        SaveWorkout.Invoke();
    }

}